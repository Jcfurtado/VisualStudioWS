@model Filmes2017.Models.Produtora
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Produtora de Filmes</h2>
@if (TempData["msg"] != null) {

<div class="alert alert-success">

    @TempData["msg"]
</div>

}




@using (@Html.BeginForm()){



    <div class="form-group">
        @Html.LabelFor(p => p.Nome)
        @Html.TextBoxFor(p => p.Nome, new {@class="form-control" } )
        @Html.ValidationMessageFor(p => p.Nome, null, new { @class="text-danger"})
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-primary" />
    <input type="reset" value="Limpar" class="btn btn-warning" />






}