@model List<Fiap.Revisao.Models.Pedido>
@{
    ViewBag.Title = "Listar";
}

<h2>Lista de Pedidos</h2>

<table class="table table-striped">
    <tr>
        <th>Nome</th>
        <th>Data</th>
        <th>Valor</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Cliente.Nome</td>
            <td>@item.Data</td>
            <td>@item.Valor</td>
        </tr>
    }
</table>

