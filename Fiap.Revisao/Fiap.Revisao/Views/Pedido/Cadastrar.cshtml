@model Fiap.Revisao.Models.Pedido
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Pedido</h2>

@if (TempData["msg"] !=  null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Cliente)
        @Html.DropDownListFor(p => p.ClienteId, ViewBag.clientes as SelectList, "Selecione", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Data)
        @Html.TextBoxFor(p => p.Data, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Valor)
        @Html.TextBoxFor(p => p.Valor, new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

